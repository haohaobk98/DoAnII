<% include template/body1 %>
<style>
.form-control {
  display: block;
  width: 100%;
  height: 34px;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.42857143;
  color: #555;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-top:3px;
  margin-bottom: 5px;
}
.form-control:focus {
  border-color: #66afe9;
}
.form-format{
  width:50%;
  
  margin-left:2em;
}
.sendcode{
padding: 0.5em 1em;
border: 1px solid #dadada;
border-radius: 4px;
background-color: #679bef;
}
body{
  background-color: #dadada;
}
.form-group{
  margin-top: 15px;
}
</style>
<% if(errors){ %>
    <ul>
        <% errors.forEach(function(error){ %>
            <li class ="register-validator"><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>
<div class="form-format">
    <form method="POST" action="/changePassword/<%-user.username%>">

<div class="form-group">
  <label>Nhập mật khẩu cũ</label>
  <input type="password" name="oldPassword" class="form-control" placeholder="nhập mật khẩu cũ" >
</div>

<div class="form-group">
  <label>Nhập mật khẩu mới </label>
  <input type="password" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" >
</div>

<div class="form-group">
  <label>Nhập lại mật khẩu </label>
  <input type="password" name="newPassword2" class="form-control" placeholder="Nhập lại mật khẩu" >
  <input type="submit" class="sendcode" value="Thay đổi">
</div>
</form>
</div>
<% include template/body2 %>